<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_action_when" />

    <Spinner
        android:id="@+id/add_action_trigger"
        android:entries="@array/triggers"
        android:entryValues="@array/trigger_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_action_contacts" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:id="@+id/add_action_contacts"
        android:layout_weight="1.0"
        tools:listitem="@android:layout/simple_list_item_checked" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/add_action_custom_message"
            android:text="@string/add_action_custom_message" />

        <EditText
            android:id="@id/add_action_custom_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="5"
            android:minLines="5"
            android:scrollbars="vertical" />
    </LinearLayout>

    <Button
        android:id="@+id/add_action_ok"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add" />


</LinearLayout>