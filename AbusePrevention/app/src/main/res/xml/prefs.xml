<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="Right"
        android:key="pref_checkbox"
        android:summary="Right"
        android:title="Checkbox Location" />
    <EditTextPreference
        android:defaultValue="Normal"
        android:key="pref_font"
        android:summary="Normal"
        android:title="Font" />
    <EditTextPreference
        android:defaultValue="Default Theme"
        android:key="pref_theme"
        android:summary="Default Theme"
        android:title="Theme" />
    <EditTextPreference
        android:defaultValue="10"
        android:key="pref_max_items"
        android:summary="10"
        android:title="Maximum Items" />
    <PreferenceScreen
        android:key="pref_advanced"
        android:title="Advanced Settings" >
        <EditTextPreference
            android:key="pref_location"
            android:title="Default Location" />
        <EditTextPreference
            android:key="pref_so_name"
            android:title="Significant Other Name" />
        <EditTextPreference
            android:key="pref_contact_name"
            android:title="Emergency Contact Name" />
        <EditTextPreference
            android:key="pref_contact_phone"
            android:title="Emergency Contact Phone Number" />
        <EditTextPreference
            android:key="pref_contact_email"
            android:title="Emergency Contact Email" />
    </PreferenceScreen>


</PreferenceScreen>